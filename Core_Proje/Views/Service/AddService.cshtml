@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_newAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Hizmet Ekleme Sayfası</h3>
</div>
@using (Html.BeginForm("AddService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Yeni Hizmet Ekleme Paneli </p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Hizmet Başlığı</label>
                        <input type="text" class="form-control" name="Title">
                    </div>                    
                    <div class="form-group">
                        <label>Resim Yolu</label>
                        <input type="text" class="form-control" name="Image URL">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}

